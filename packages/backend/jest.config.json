{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|e2e|spec))\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1",
        "^src/modules/(.*)$": "<rootDir>/src/modules/$1"
    }
}
